@model IEnumerable<AK.Models.Gallery>

<h2 class="text-center my-4">Gallery</h2>
<div class="container">
    <div class="row">
        @foreach (var gallery in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@gallery.ImageUrl" alt="@gallery.Title" class="card-img-top img-fluid" style="max-height: 300px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@gallery.Title</h5>
                        <form asp-area="Customer" asp-controller="CustomerGall" asp-action="AddToFavourites" method="post">
                            <input type="hidden" name="galleryId" value="@gallery.Id" />
                            <button type="submit" class="btn btn-primary">Add to Favourites</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
